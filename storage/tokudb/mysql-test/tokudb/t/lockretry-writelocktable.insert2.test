source include/have_tokudb.inc;
--disable_warnings
DROP TABLE IF EXISTS t1;
--enable_warnings

CREATE TABLE t1 (a INT PRIMARY KEY) ENGINE=TokuDB;

connect (conn1,localhost,root,,);

let $i=1000;
while ($i) 
{
	connection default;
	LOCK TABLES t1 WRITE;
	eval INSERT INTO t1 VALUES (-$i);

	connection conn1;
	send;
	eval INSERT INTO t1 VALUES ($i);

	connection default;
	UNLOCK TABLES;

	connection conn1;
	reap;

	dec $i;
}

disconnect conn1;

connection default;
DROP TABLE t1;