buf_page_is_old(
/*============*/
	const buf_page_t*	bpage)	/*!< in: control block */
{
#ifdef UNIV_DEBUG
	//buf_pool_t*	buf_pool = buf_pool_from_bpage(bpage);
	//ut_ad(buf_pool_mutex_own(buf_pool));
#endif
	ut_ad(buf_page_in_file(bpage));

