###########################################################################
# Truncate a help table
TRUNCATE TABLE mysql.help_topic;
SELECT COUNT(*) = 0 FROM mysql.help_topic;
COUNT(*) = 0
1
# restart: --upgrade=FORCE --log-error=MYSQLD_LOG
SELECT COUNT(*) != 0 FROM mysql.help_topic;
COUNT(*) != 0
1
