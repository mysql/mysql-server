SELECT GET_LOCK('test1',0);
GET_LOCK('test1',0)
1
SELECT GET_LOCK('test2',0);
GET_LOCK('test2',0)
1
SELECT RELEASE_ALL_LOCKS() = 2 AS expect_1;
expect_1
1
SELECT IS_FREE_LOCK('test1') AND IS_FREE_LOCK('test2') AS expect_1;
expect_1
1
