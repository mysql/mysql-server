# The function should return an empty string if len is 0.
SELECT RPAD('a', 0, 'x') AS result;
result

SELECT RPAD('a', 0, '') AS result;
result

SELECT RPAD('', 0, 'x') AS result;
result

SELECT RPAD('', 0, '') AS result;
