# Setup
create table parent (
pk int primary key,
id1 int unique,
id2 int unique,
id3 int unique,
ref1 int,
ref2 int,
ref3 int
) engine ndb;
create table child (
pk int primary key,
ref1 int,
ref2 int
) engine ndb;
# Add self referential foreign keys
# Add one with a user specified constraint name
alter table parent
add constraint fk_p1 foreign key ref1_idx(ref1) references parent (id1),
algorithm = copy;
# Verify the foreign keys on parent
SHOW CREATE TABLE test.parent;
