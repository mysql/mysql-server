#
# Check creating table with record size at the limits of
# what is supported by NDB and MySQL
#
CREATE TABLE t1(
col1 int unsigned not null primary key,
col3 varchar(15000),
col4 varchar(14000))
charset=latin1 engine=ndbcluster;
drop table t1;
CREATE TABLE t2(
col1 int unsigned not null primary key,
col3 varchar(15000),
col4 varchar(14990))
charset=latin1 engine=ndbcluster;
drop table t2;
CREATE TABLE t3_too_large_for_ndb(
col1 int unsigned not null primary key,
col3 varchar(15000),
col4 varchar(14991))
charset=latin1 engine=ndbcluster;
ERROR HY000: Can't create table 't3_too_large_for_ndb'
SHOW WARNINGS;
Level	Code	Message
Warning	1296	Got error 738 'Record too big' from NDB
Error	1005	Can't create table 't3_too_large_for_ndb'
