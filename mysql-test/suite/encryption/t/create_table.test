--let explicit_encryption_clause=false

--let privilege_check=false
--let database_encryption='n'
--source ./create_table.inc
--let database_encryption='y'
--source ./create_table.inc

--let privilege_check=true
--let database_encryption='n'
--source ./create_table.inc
--let database_encryption='y'
--source ./create_table.inc

