#
CREATE TABLE IF NOT EXISTS `test`.`user1` (
`user_id` BINARY(16) NOT NULL,
`nickname` VARCHAR(255) NOT NULL,
`email` VARCHAR(255) NULL,
PRIMARY KEY (`user_id`))
ENGINE = InnoDB;
CREATE TABLE IF NOT EXISTS `test`.`user2` (
`id` int AUTO_INCREMENT PRIMARY KEY,
`user_id` BINARY(16) NOT NULL,
`nickname` VARCHAR(255) NOT NULL,
`email` VARCHAR(255) NULL)
ENGINE = InnoDB;
