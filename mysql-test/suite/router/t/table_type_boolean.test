--echo
--echo #
--echo # II.3
--exec $MRS_CLIENT_ARGS --path /svc/test/tinyint1?q={\"is_active\":true} --expected-status 400
--exec $MRS_CLIENT_ARGS --path /svc/test/tinyint1?q={\"is_active\":false} --expected-status 400


