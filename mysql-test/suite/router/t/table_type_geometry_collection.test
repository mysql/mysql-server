--exec $MRS_CLIENT_ARGS --path /svc/test/geo0/1 --wait-until-found 60 --display none

--let $MRS_CLIENT_ARGS_LIST=$MRS_CLIENT_ARGS --json-pointer /items/*/gc
--let $MRS_CLIENT_ARGS_OBJ=$MRS_CLIENT_ARGS --json-pointer /gc

