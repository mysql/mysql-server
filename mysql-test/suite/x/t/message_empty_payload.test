# Set the timeout for connection to 300 seconds
# which is must be greater than the peerdisc/timeout
SET GLOBAL mysqlx_connect_timeout = 300;
SET GLOBAL mysqlx_wait_timeout = 300;

--exec $MYSQLXTEST -u x_root  --file=$MYSQL_TMP_DIR/validate_empty_message.tmp 2>&1
--exec $MYSQLXTEST -u x_root  --file=$MYSQL_TMP_DIR/validate_empty_message_on_raw.tmp --no-auth 2>&1
