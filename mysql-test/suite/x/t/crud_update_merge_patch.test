	-v%TABLE_SPECIFIC_OPERATIONS%=test_collection_create_update_find.macro
	--file=$MYSQL_TMP_DIR/crud_update_merge.xpl 2>&1;

--echo #
--echo # Requirement:
--echo # * F10 - Must work for JSON document fields in tables
exec $MYSQLXTEST
