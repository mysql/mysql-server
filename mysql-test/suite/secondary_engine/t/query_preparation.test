SELECT /*+ SET_VAR(use_secondary_engine = FORCED) */ * FROM t1;
SELECT a FROM t1;
--error ER_SECONDARY_ENGINE
SELECT /*+ SET_VAR(use_secondary_engine = FORCED) */ b FROM t1;
SHOW SESSION STATUS LIKE 'Secondary_engine_execution_count';
