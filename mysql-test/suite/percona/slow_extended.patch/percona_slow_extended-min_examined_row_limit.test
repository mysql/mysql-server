SELECT sleep(2);

set min_examined_row_limit=5;

SELECT sleep(2) union select t2.id from t as t1,t as t2;
SELECT sleep(2);

SET GLOBAL SLOW_QUERY_LOG=OFF;

--disable_warnings
drop table if exists t;
--enable_warnings

FLUSH LOGS;
