#
# BUG#40045: Replication failure on RBR + no PK + UPDATE + integer key + char
# with no key
#
connection master;
CREATE TABLE t1 ( i1 int, c1 char(1), key ( i1 ));
INSERT IGNORE INTO t1 VALUES (1, 'a');
UPDATE t1 SET c1 = 'b' WHERE i1 = 1;
DROP TABLE t1;
