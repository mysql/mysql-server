--source include/rpl_connection_master.inc
--let $limit= 0,7
--let $event_sequence= #Gtid # !Q(TRUNCATE.*) #Gtid/(.*'$explicit_gtid')# !Begin # !Insert # !Commit
--source include/assert_binlog_events.inc

