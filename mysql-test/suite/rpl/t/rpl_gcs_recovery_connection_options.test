# Recovery donor connection options test
# This test checks the user options used for donor connection during recovery.
#
# In this test the following points are checked:
#   1) The user/password fields cannot accept improper values.
#   2) The user used for the donor connection should be settable/readable.
#   3) The password can be set but when the user trys to read it, it should
#      be blank.
#   4) When given, correct fields should allow for a correct recovery
#   5) The retry count should be settable/readable.
#   6) When given, incorrect fields should cause recovery to fail, making
#      the node leave.

--source include/have_debug.inc
--source include/have_gcs_replication_plugin.inc

--let $gcs_group_name= b5eb4110-a3a2-11e3-a5e2-0800200c9a66
--let $rpl_skip_gcs_replication_start= 1
--let $rpl_server_count= 3
--source include/master-slave.inc

--let $gcs_rec_invalid_user= "thisusernamehasmorethan48characterssoitisinvalid."
--let $gcs_rec_invalid_password= "thispasswordhasmorethan32chara..."

--let $debug_save_count= `SELECT @@GLOBAL.gcs_replication_plugin_recovery_retry_count`
--let $debug_save_user= `SELECT @@GLOBAL.gcs_replication_plugin_recovery_user`

--let $gcs_rec_user= gcs_user
--let $gcs_rec_password= gcs_password
--let $gcs_rec_bad_password= gcs_bad_password

--echo #
--echo # Start the donor node
--echo #

--connection server1
--source include/start_gcs_replication.inc

--let $gcs_number_of_nodes= 1
--source include/rpl_gcs_wait_for_number_of_nodes.inc

#insert some data
CREATE TABLE t1 (c1 INT NOT NULL PRIMARY KEY) ENGINE=InnoDB;
INSERT INTO t1 VALUES (1);

--echo #
--echo # Install a rpl user for the donor connection
--echo #

--eval CREATE USER "$gcs_rec_user" IDENTIFIED BY "$gcs_rec_password"
--eval GRANT REPLICATION SLAVE ON *.* TO "$gcs_rec_user"
FLUSH PRIVILEGES;

--echo #
--echo # Install the joiner node and try to set invalid values
--echo #

--connection server2

set session sql_log_bin=0;
call mtr.add_suppression("The given user name for recovery*");
call mtr.add_suppression("The given password for recovery*");
set session sql_log_bin=1;

--error ER_WRONG_VALUE_FOR_VAR
--eval SET GLOBAL gcs_replication_plugin_recovery_user= $gcs_rec_invalid_user
--error ER_WRONG_VALUE_FOR_VAR
--eval SET GLOBAL gcs_replication_plugin_recovery_password= $gcs_rec_invalid_password

--echo #
--echo # Set and check valid options
--echo #

--eval SET GLOBAL gcs_replication_plugin_recovery_user= $gcs_rec_user
--eval SET GLOBAL gcs_replication_plugin_recovery_password= $gcs_rec_password

--let $assert_text= The value of the recovery user name should be $gcs_rec_user
--let $assert_cond= "[SELECT @@gcs_replication_plugin_recovery_user]" = "$gcs_rec_user"
--source include/assert.inc

--let $assert_text= The value of the recovery password should be empty
--let $assert_cond= "[SELECT @@gcs_replication_plugin_recovery_password]" = ""
--source include/assert.inc

--echo #
--echo # Start the joiner node with the given credentials and check if it is OK
--echo #

--source include/start_gcs_replication.inc

let $assert_text= On the recovered node, the table should contain 1 elements;
let $assert_cond= [select count(*) from t1] = 1;
source include/assert.inc;

--echo #
--echo # Create a new node and give it a bad password, watching it fail
--echo #

SET @debug_save= @@GLOBAL.DEBUG;

--connection server3
set session sql_log_bin=0;
call mtr.add_suppression("There was an error when connecting to the donor*");
call mtr.add_suppression("Maximum number of retries when*");
set session sql_log_bin=1;

--eval SET GLOBAL gcs_replication_plugin_recovery_user= $gcs_rec_user
--eval SET GLOBAL gcs_replication_plugin_recovery_password= $gcs_rec_bad_password

--echo # Set the retry count to try only twice. One time for each node.
--eval SET GLOBAL gcs_replication_plugin_recovery_retry_count= 2;

--let $assert_text= The value of the recovery retry count should be equal to 2
--let $assert_cond= "[SELECT @@gcs_replication_plugin_recovery_retry_count]" = "2"
--source include/assert.inc

--echo # Start recovery and wait to verify the node is in recovery

SET @@GLOBAL.DEBUG='d,recovery_thread_wait';
SET GLOBAL gcs_replication_plugin_group_name= "b5eb4110-a3a2-11e3-a5e2-0800200c9a66";
START GCS_REPLICATION;

--let $gcs_node_state= RECOVERING
--source include/rpl_gcs_wait_for_node_state.inc

--echo # Wake up recovery

SET @@GLOBAL.DEBUG= @debug_save;
SET DEBUG_SYNC= "now SIGNAL signal.recovery_continue";

--echo # The node should become offline as it can't connect

--let $gcs_node_state= OFFLINE
--source include/rpl_gcs_wait_for_node_state.inc

# Remove the plugin on the failed node

--connection server2
--let $gcs_number_of_nodes= 2
--source include/rpl_gcs_wait_for_number_of_nodes.inc

--echo #
--echo # Clean up
--echo #

--eval DROP USER "$gcs_rec_user"
--connection server3
--eval SET GLOBAL gcs_replication_plugin_recovery_user= $debug_save_user
--eval SET GLOBAL gcs_replication_plugin_recovery_retry_count= $debug_save_count

--connection server2
--eval SET GLOBAL gcs_replication_plugin_recovery_user= $debug_save_user
DROP TABLE t1;

--source include/rpl_end.inc
