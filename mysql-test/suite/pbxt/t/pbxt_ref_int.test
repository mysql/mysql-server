drop table if exists t1, t2;
--enable_warnings

CREATE TABLE t1
(
 id INT PRIMARY KEY
) ENGINE=pbxt; # PBXT: Instead of InnoDB

CREATE TABLE t2
(
 v INT,
 CONSTRAINT c1 FOREIGN KEY (v) REFERENCES t1(id)
) ENGINE=pbxt; # PBXT: Instead of InnoDB

