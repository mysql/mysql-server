       object_name,
       index_name,
       count_fetch,
       count_insert,
       count_update,
       count_delete
  FROM performance_schema.table_io_waits_summary_by_index_usage
 WHERE object_schema = 'test'
   AND object_name = 't_60905';

DROP TABLE t_60905;

