--echo ##########################################
--echo # Server log
--echo ##########################################
--perl
  my $file= $ENV{'GREP_FILE'};
  my $pattern= ".*test_sql_errors.*";
  open(FILE, "$file") or die("Unable to open $file: $!\n");
  my $count = 0;
  while (<FILE>) {
    if ($_ =~ m/$pattern/) {
#      print "$_\n";
      $count++;
      break;
    }
  }
#  print "Count: $count\n";
  if ($count >= 9){
    print "test passed.\n";
  } else {
    print "test failed.\n";
  }
  close(FILE);
EOF
