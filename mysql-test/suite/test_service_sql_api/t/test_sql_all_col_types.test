--source include/not_embedded.inc

CREATE TABLE t_int (c1  TINYINT,
                    c2  SMALLINT,
                    c3  MEDIUMINT,
                    c4  INT,
                    c5  INTEGER,
                    c6  SMALLINT UNSIGNED,
                    c7  MEDIUMINT UNSIGNED,
                    c8  INT UNSIGNED,
                    c9  INTEGER);

CREATE TABLE t_bigint (c1  BIGINT,
                       c2  BIGINT UNSIGNED);

CREATE TABLE t_real (c1 REAL UNSIGNED,
                     c2 DOUBLE UNSIGNED,
                     c3 FLOAT UNSIGNED,
                     c4 DOUBLE,
                     c5 FLOAT);

CREATE TABLE t_dec  (c1 DECIMAL(4,2) UNSIGNED,
                     c2 NUMERIC(4,2) UNSIGNED,
                     c3 DECIMAL(4,2),
                     c4 NUMERIC(4,2));

CREATE TABLE t_date (c1 DATE,
                     c2 TIME,
                     c3 TIMESTAMP,
                     c4 DATETIME,
                     c5 YEAR);

CREATE TABLE t_char (c1 CHAR(32),
                     c2 VARCHAR(128) BINARY,
                     c3 VARCHAR(128),
                     c4 BINARY(128),
                     c5 VARBINARY(2048));

CREATE TABLE t_lob (c1  TINYBLOB,
                    c2  BLOB,
                    c3  MEDIUMBLOB,
                    c4  LONGBLOB,
                    c5  TINYTEXT,
                    c6  TEXT,
                    c7  MEDIUMTEXT,
                    c8  LONGTEXT,
                    c9  TINYTEXT BINARY,
                    c10 TEXT BINARY,
                    c11 MEDIUMTEXT BINARY,
                    c12 LONGTEXT BINARY);

CREATE TABLE t_spec (c1 BIT(16),
                     c2 ENUM('v1','v2','v3'),
                     c3 SET('v1','v2','v3'),
                     c4 GEOMETRY);

