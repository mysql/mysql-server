       TestNo INT AUTO_INCREMENT PRIMARY KEY,
       Source TEXT,
       Target TEXT,
       Flags TEXT,
       On_Master TEXT,
       On_Slave TEXT,
       Expected TEXT,
       Compare INT,
       Error TEXT);

SELECT @@global.slave_type_conversions;
