#
# BUG#13236 multi-update with subquery & --replicate-ignore-table
#

connection master;
CREATE TABLE t1 ( a INT );
INSERT INTO t1 VALUES (0);
UPDATE t1, (SELECT 3 as b) AS x SET t1.a = x.b;
select * from t1;

--source include/sync_slave_sql_with_master.inc
connection slave;
select * from t1;

connection master;
drop table t1;
