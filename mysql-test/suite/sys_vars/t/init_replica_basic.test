###################### mysql-test\t\init_replica_basic.test #####################
#                                                                             #
# Variable Name: init_replica                                                   #
# Scope: GLOBAL                                                               #
# Access Type: Dynamic                                                        #
# Data Type: string                                                           #
# Default Value:                                                              #
# Range:                                                                      #
#                                                                             #
#                                                                             #
# Creation Date: 2008-02-07                                                   #
# Author:  Rizwan                                                             #
#                                                                             #
# Description: Test Cases of Dynamic System Variable init_replica               #
#              that checks the behavior of this variable in the following ways#
#              * Default Value                                                #
#              * Valid & Invalid values                                       #
#              * Scope & Access method                                        #
#              * Data Integrity                                               #
#                                                                             #
# Reference: http://dev.mysql.com/doc/refman/5.1/en/                          #
#  server-system-variables.html                                               #
#                                                                             #
###############################################################################

--source include/load_sysvars.inc
############################################
##       START OF init_replica TESTS        ##
############################################

#############################################################
#                 Save initial value                        #
#############################################################
# save using implicit session scope
SET @global_start_value = @@global.init_replica;
SELECT @global_start_value AS INIT_VALUE;

--echo '#--------------------FN_DYNVARS_037_01------------------#'
###############################################################################
#       Test Variable access and assignment with and without @@               #
###############################################################################
# select without @@
--error ER_BAD_FIELD_ERROR
SELECT init_replica;
# access using no scope specified
SELECT @@init_replica;
# assign value without @@
SET @@global.init_replica='SET autocomit=0';
SELECT @@global.init_replica;
# using another syntax for accessing session variable
SET global init_replica='SET autocomit=0';
# accessing variable with scope the wrong way
--Error ER_BAD_FIELD_ERROR
SELECT global init_replica;
--Error ER_PARSE_ERROR
SELECT @@global init_replica;


--echo '#--------------------FN_DYNVARS_037_02-------------------------#'
################################################################
#     Check the DEFAULT value of init_replica for global         #
################################################################
SET @@global.init_replica = 'SET join_buffer_size=8200';
SET @@global.init_replica = DEFAULT;
SELECT @@global.init_replica;

--echo '#--------------------FN_DYNVARS_037_03-------------------------#'
######################################################################
#     see if it is accessable using session scope                    #
######################################################################
--Error ER_GLOBAL_VARIABLE
SET @@session.init_replica = '';
--Error ER_GLOBAL_VARIABLE
SET @@init_replica = "";
--Error ER_INCORRECT_GLOBAL_LOCAL_VAR
SELECT @@session.init_replica;
--Error ER_INCORRECT_GLOBAL_LOCAL_VAR
SELECT @@local.init_replica;

--echo '#--------------------FN_DYNVARS_037_04-------------------------#'
#######################################################################
#     Change the value of init_replica to a valid value                 #
#######################################################################

SET @@global.init_replica="";
SELECT @@global.init_replica;

SET @@global.init_replica='SELECT 1,"abc"';
SELECT @@global.init_replica;

SET @@global.init_replica='SET @a="b"';
SELECT @@global.init_replica;

SET @@global.init_replica="SET autocomit=1;REVOKE ALL ON INFORMATION_SCHEMA.*";
SELECT @@global.init_replica;

SET @@global.init_replica='SHOW VARIABLES';
SELECT @@global.init_replica;

SET @@global.init_replica = NULL;
SELECT @@global.init_replica;

#any string is accepted as valid value as its is not verified/compiled 
# untill runtime
SET @@global.init_replica='abc 123 +-*/';
SELECT @@global.init_replica;

SET @@global.init_replica=this_will_give_syntax_error;
SELECT @@global.init_replica;

SET @@global.init_replica = init_replica;
SELECT @@global.init_replica;

--echo '#--------------------FN_DYNVARS_037_05-------------------------#'
#########################################################################
#     Change the value of init_replica to an invalid value for global     #
#########################################################################

--Error ER_WRONG_TYPE_FOR_VAR
SET @@global.init_replica = true;
--Error ER_WRONG_TYPE_FOR_VAR
SET @@global.init_replica = false;
--Error ER_WRONG_TYPE_FOR_VAR
SET @@global.init_replica = 1.1;
--Error ER_WRONG_TYPE_FOR_VAR
SET @@global.init_replica = 0;
--Error ER_WRONG_TYPE_FOR_VAR
SET @@global.init_replica = 1;
--Error ER_WRONG_TYPE_FOR_VAR
SET @@global.init_replica = -1;

SET @@global.init_replica = ON;
SELECT @@global.init_replica;


--echo '#--------------------FN_DYNVARS_037_06-------------------------#'
##############################################################################
#     Check if the value in GLOBAL Table matches value in variable           #
##############################################################################

--disable_warnings
SELECT @@global.init_replica = (SELECT VARIABLE_VALUE 
FROM performance_schema.global_variables 
WHERE VARIABLE_NAME='init_replica') AS res;
--enable_warnings

####################################
#     Restore initial value        #
####################################
SET @@global.init_replica = @global_start_value;
SELECT @@global.init_replica;

###################################################
#                 END OF init_replica TESTS         #
###################################################
