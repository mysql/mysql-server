#
# only global
#
--source include/have_log_bin.inc
select @@global.log_replica_updates;
--error ER_INCORRECT_GLOBAL_LOCAL_VAR
select @@session.log_replica_updates;
show global variables like 'log_replica_updates';
show session variables like 'log_replica_updates';
--disable_warnings
select * from performance_schema.global_variables where variable_name='log_replica_updates';
select * from performance_schema.session_variables where variable_name='log_replica_updates';
--enable_warnings

#
# show that it's read-only
#
--error ER_INCORRECT_GLOBAL_LOCAL_VAR
set global log_replica_updates=1;
--error ER_INCORRECT_GLOBAL_LOCAL_VAR
set session log_replica_updates=1;
