
SET @start_global_value = @@global.replica_checkpoint_period;
SELECT @start_global_value;

#
# exists as global only
#
select @@global.replica_checkpoint_period;
--error ER_INCORRECT_GLOBAL_LOCAL_VAR
select @@session.replica_checkpoint_period;
--replace_regex /[0-9]+/period/
show global variables like 'replica_checkpoint_period';
--replace_regex /[0-9]+/period/
show session variables like 'replica_checkpoint_period';
--disable_warnings
--replace_regex /[0-9]+/period/
select * from performance_schema.global_variables where variable_name='replica_checkpoint_period';
--replace_regex /[0-9]+/period/
select * from performance_schema.session_variables where variable_name='replica_checkpoint_period';
--enable_warnings

#
# show that it's writable
#
set global replica_checkpoint_period=1;
select @@global.replica_checkpoint_period;
--error ER_GLOBAL_VARIABLE
set session replica_checkpoint_period=1;

#
# incorrect types
#
--error ER_WRONG_TYPE_FOR_VAR
set global replica_checkpoint_period=1.1;
--error ER_WRONG_TYPE_FOR_VAR
set global replica_checkpoint_period=1e1;
--error ER_WRONG_TYPE_FOR_VAR
set global replica_checkpoint_period="foo";

#
# min/max values
#
set global replica_checkpoint_period=1;
select @@global.replica_checkpoint_period;
set global replica_checkpoint_period=cast(-1 as unsigned int);
select @@global.replica_checkpoint_period as "truncated to the maximum";

SET @@global.replica_checkpoint_period = @start_global_value;
SELECT @@global.replica_checkpoint_period;
