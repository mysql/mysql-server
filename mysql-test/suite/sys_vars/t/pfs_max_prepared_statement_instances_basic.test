--source include/not_embedded.inc
--source include/have_perfschema.inc

#
# Display default value
#

select @@global.performance_schema_max_prepared_statement_instances;


#
# Only global
#

select @@global.performance_schema_max_prepared_statement_instances;

--error ER_INCORRECT_GLOBAL_LOCAL_VAR
select @@session.performance_schema_max_prepared_statement_instances;

show global variables like 'performance_schema_max_prepared_statement_instances';

show session variables like 'performance_schema_max_prepared_statement_instances';

select * from information_schema.global_variables
  where variable_name='performance_schema_max_prepared_statement_instances';

select * from information_schema.session_variables
  where variable_name='performance_schema_max_prepared_statement_instances';

#
# Read-only
#

--error ER_INCORRECT_GLOBAL_LOCAL_VAR
set global performance_schema_max_prepared_statement_instances=1;

--error ER_INCORRECT_GLOBAL_LOCAL_VAR
set session performance_schema_max_prepared_statement_instances=1;

#
# Check if the value in GLOBAL Table matches value in variable
#

SELECT @@GLOBAL.performance_schema_max_prepared_statement_instances = VARIABLE_VALUE
FROM INFORMATION_SCHEMA.GLOBAL_VARIABLES
WHERE VARIABLE_NAME='performance_schema_max_prepared_statement_instances';

select @@global.performance_schema_max_prepared_statement_instances;

select * from information_schema.global_variables
  where variable_name='performance_schema_max_prepared_statement_instances';

#
# Check if accessing variable with and without GLOBAL point to same variable
#

SELECT @@performance_schema_max_prepared_statement_instances = @@GLOBAL.performance_schema_max_prepared_statement_instances;


