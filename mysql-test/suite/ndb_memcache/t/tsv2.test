  $mc->set("t:15", "kelpie\tlimp\t15");
  $mc->set("t:16", "mop\tnoose\t16");
  $mc->set("t:17", "oil\tpig\t17");
  $mc->set("t:18", "quagmire\trelic\t18");
  $mc->set("t:19", "scum\ttic\t19");
