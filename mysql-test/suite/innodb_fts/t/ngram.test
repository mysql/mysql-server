SELECT * FROM INFORMATION_SCHEMA.INNODB_FT_INDEX_TABLE;

SELECT * FROM articles WHERE
	MATCH(title, body) AGAINST('数据');

SET GLOBAL innodb_ft_aux_table=default;

DROP TABLE articles;

