test	t_explicit_row_format	InnoDB	Dynamic	row_format=DYNAMIC
test	t_implicit_row_format	InnoDB	Dynamic	row_format=DYNAMIC
DROP TABLE t_explicit_row_format, t_default_row_format, t_implicit_row_format;
