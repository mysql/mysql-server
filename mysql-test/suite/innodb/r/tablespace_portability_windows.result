SELECT s.space_type 'Type', s.name 'Space Name', d.path 'Path'
	FROM information_schema.innodb_tablespaces s, information_schema.innodb_datafiles d
WHERE s.name like '%ibport%' AND s.space = d.space ORDER BY s.space;
