CREATE FUNCTION get_cache(
  obj_id   BIGINT UNSIGNED,
  start    DATETIME,
  end      DATETIME
)
  RETURNS FLOAT
  READS SQL DATA
BEGIN
  DECLARE result FLOAT;

  CALL cachedata(obj_id, start, end);

  SELECT SUM(value) INTO result FROM cachedata WHERE
    object_id = obj_id
    AND start = start
    AND end = end;

  RETURN result;
END$$

