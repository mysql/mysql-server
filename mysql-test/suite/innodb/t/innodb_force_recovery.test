create table t3(f1 int not null)engine=innodb;

--error ER_BAD_TABLE_ERROR
drop table t3;

--error ER_ERROR_ON_RENAME
rename table t1 to t3;

--error ER_OPEN_AS_READONLY
truncate table t1;

drop table t1;
show tables;

