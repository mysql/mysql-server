c BLOB(100),d VARCHAR(100),e TEXT) ENGINE=InnoDB;


INSERT INTO t1(b,c,d,e) VALUES (11.111,REPEAT('a1',50),REPEAT('a1',50),
REPEAT('a1',50));
INSERT INTO t1(b,c,d,e) VALUES (11.111,REPEAT('a1',50),REPEAT('a1',50),
REPEAT('a1',50));
SELECT a,b,RIGHT(c,10),RIGHT(d,10),RIGHT(e,10) FROM t1;
UPDATE t1 SET a = a + 5;
DELETE FROM t1 WHERE a > 6;
