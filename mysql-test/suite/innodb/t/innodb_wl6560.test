show warnings;
--echo #files in MYSQL_TMP_DIR
--replace_regex /#sql[0-9a-f_]*/#sql<temporary>/
--list_files $MYSQL_TMP_DIR/ *.ibd
drop table t;
#
create temporary table t (
	i int)
	engine = innodb row_format = dynamic;
--replace_regex /[0-9]+/NUMBER/
show warnings;
--echo #files in MYSQL_TMP_DIR
--replace_regex /#sql[0-9a-f_]*/#sql<temporary>/
