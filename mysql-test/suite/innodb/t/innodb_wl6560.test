	i int)
	engine = innodb row_format = compressed;
--replace_regex /[0-9]+/NUMBER/
show warnings;
drop table t;
#
create temporary table t (
	i int)
	engine = innodb row_format = compressed key_block_size = 8;
--replace_regex /[0-9]+/NUMBER/
show warnings;
#
drop table t;
set global innodb_file_per_table = 1;
create temporary table t (
	i int)
	engine = innodb row_format = compressed key_block_size = 8;
--replace_regex /[0-9]+/NUMBER/
show warnings;
drop table t;
