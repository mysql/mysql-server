    SET DEBUG_SYNC = "now SIGNAL c2_can_validate";
    SET DEBUG_SYNC = "now WAIT_FOR c2_will_wait";
    SET DEBUG_SYNC = "now SIGNAL c1_can_commit";
    COMMIT;

