SET @@SESSION.group_replication_consistency= DEFAULT;

############################################################
# 09. Clean up.
[connection server1]
DROP TABLE t1;
DROP TABLE t2;
[connection server2]
DROP TABLE t1;
DROP TABLE t2;
include/group_replication_end.inc
