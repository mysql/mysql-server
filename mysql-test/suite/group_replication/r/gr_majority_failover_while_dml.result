CREATE PROCEDURE dml_operations()
BEGIN
declare x INT;
set x=1;
while x<300 do
insert into t1 values (x);
update t1 set a=x+300 where a=x;
delete from t1 where a<310;
set x=x+1;
end  while;
end$$

