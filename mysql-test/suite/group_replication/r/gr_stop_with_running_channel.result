SET DEBUG_SYNC='now signal signal.resume_stop_before_leave_the_group';
[connection server_1]
[connection server1]
include/gr_wait_for_member_state.inc
SET DEBUG_SYNC= 'RESET';
include/assert.inc ['There is no table t1 on server1']

