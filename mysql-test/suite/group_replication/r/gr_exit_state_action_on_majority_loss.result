#########################################################################

[connection server1]
include/stop_group_replication.inc
include/start_and_bootstrap_group_replication.inc
include/rpl_reconnect.inc
[connection server2]
SET @@global.group_replication_group_seeds="GROUP_SEEDS_SERVER2";
