CREATE PROCEDURE dml_operations(IN p INT,IN q INT)
BEGIN
declare x INT;
set x=p;
while x<q do
insert into t1 values (x);
update t1 set a=x+400 where a=x;
delete from t1 where a<420;
set x=x+1;
end  while;
end$$

