#    server2 applier channel relay logs do not have checksums.
[connection server1]
INSERT INTO t1 VALUES (1);
include/rpl_sync.inc
[connection server2]
include/mysqlbinlog.inc
include/assert_grep.inc [applier channel relay logs do not have checksums]

