############################################################
# 1. Verify that the entries corresponding to the
#    instrumented memory are in the setup instruments
#    table and the memory summary tables.
SELECT * FROM performance_schema.setup_instruments WHERE NAME LIKE 'memory/group_rpl/certification_data';
NAME	ENABLED	TIMED	PROPERTIES	FLAGS	VOLATILITY	DOCUMENTATION
memory/group_rpl/certification_data	YES	NULL	global_statistics		0	Memory gets allocated for this Event name when new incoming transaction is received for certification.
include/assert.inc ['There should be 1 entry corresponding to the certification_data in the setup_instruments table after starting GR']
SELECT EVENT_NAME FROM performance_schema.memory_summary_global_by_event_name WHERE EVENT_NAME LIKE 'memory/group_rpl/certification_data';
EVENT_NAME
memory/group_rpl/certification_data
include/assert.inc ['There should be 1 entry corresponding to the certification_data in the memory_summary_global_by_event_name table after starting GR']

############################################################
# 2. Verify that the sum of bytes allocated is greater than
#    zero for a transaction and zero after transaction is
#    finished.
CREATE TABLE t1(c1 INT PRIMARY KEY) ENGINE=innodb;
SET @@GLOBAL.DEBUG= '+d,group_replication_certification_handler_set_transaction_context';
INSERT INTO t1 VALUES(1);;
[connection server_1]
SET DEBUG_SYNC= "now WAIT_FOR signal.group_replication_certification_handler_set_transaction_context_reached";
include/assert.inc ['The sum bytes allocated must be greater than 0']
SET @@GLOBAL.DEBUG= '+d,group_replication_certification_handler_reset_transaction_context';
SET @@GLOBAL.DEBUG= '-d,group_replication_certification_handler_set_transaction_context';
SET DEBUG_SYNC= "now SIGNAL signal.group_replication_certification_handler_set_transaction_context_continue";
SET DEBUG_SYNC= "now WAIT_FOR signal.group_replication_certification_handler_reset_transaction_context_reached";
include/assert.inc ['The sum bytes allocated must be 0']
SET @@GLOBAL.DEBUG= '-d,group_replication_certification_handler_reset_transaction_context';
SET DEBUG_SYNC= "now SIGNAL signal.group_replication_certification_handler_reset_transaction_context_continue";
[connection server1]
DROP TABLE t1;

