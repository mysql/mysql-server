SET sql_log_bin=1;
server1
include/assert.inc ['There are 3 values in table t1 on server1']
server2
include/assert.inc ['There are 3 values in table t1 on server2']
server1
server2
include/assert.inc ['server1 and server2 GTID_EXECUTED must be equal']

