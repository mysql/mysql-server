############################################################
# Validate that `group_replication_set_as_primary()` does
# wait for a ongoing DROP INDEX to complete before
# actually change the primary.
############################################################
--let $ddl_preparation_statement= CREATE TABLE t1 (c1 INT PRIMARY KEY, c2 VARCHAR(3), INDEX idx1 (c2))
--let $ddl_statement= DROP INDEX idx1 ON t1
--let $ddl_cleanup_statement= DROP TABLE t1
--source ../include/gr_primary_manual_failover_vs_ddl.inc
