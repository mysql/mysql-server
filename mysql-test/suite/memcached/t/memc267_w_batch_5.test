if ($val) { print "$val\n"; }
$val = $memd->add("O","Oldenburg|Friesland");
$val = $memd->get("O");
if ($val) { print "$val\n"; }
$memd->disconnect_all;
EOF
--sorted_result
SELECT c1,c2,c21 FROM test.t1;

