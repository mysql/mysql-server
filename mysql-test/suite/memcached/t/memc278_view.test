			c2 VARCHAR(1024),
			c21 VARCHAR(1024),
			c3 INT, c4 BIGINT UNSIGNED, c5 INT, primary key(c1))
ENGINE = INNODB;

CREATE TABLE t4        (c1 VARCHAR(32),
			c2 VARCHAR(1024),
			c21 VARCHAR(1024),
			c22 VARCHAR(1024),
			c3 INT, c4 BIGINT UNSIGNED, c5 INT, primary key(c1))
ENGINE = INNODB;

CREATE TABLE t5        (c1 VARCHAR(32),
			c2 VARCHAR(1024),
			c21 VARCHAR(1024),
			c22 VARCHAR(1024),
			c23 VARCHAR(1024),
			c3 INT, c4 BIGINT UNSIGNED, c5 INT, primary key(c1))
ENGINE = INNODB;

