                      (2, '{"latitude": -90, "longitude": -180}'),
                      (3, '{"latitude": 181, "longitude": 0}'),
                      (4, '{"latitude": 90, "longitude": 180}');
SHOW WARNINGS;
GET DIAGNOSTICS CONDITION 1 @p1 = MYSQL_ERRNO, @p2 = MESSAGE_TEXT;
SELECT @p1, @p2;

