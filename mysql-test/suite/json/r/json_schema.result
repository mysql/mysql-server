PREPARE stmt FROM 'SELECT JSON_SCHEMA_VALID(?, ''{}'') FROM DUAL';
SET @json_schema = '{"type":"object"}';
SET @null = NULL;
EXECUTE stmt USING @json_schema;
JSON_SCHEMA_VALID(?, '{}')
1
EXECUTE stmt USING @null;
JSON_SCHEMA_VALID(?, '{}')
