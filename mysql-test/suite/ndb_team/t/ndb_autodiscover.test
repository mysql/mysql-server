#######################################################
# Test that a table that has been dropped from NDB
# but still exists on disk, get a consistent error message
# saying "No such table existed"
#

flush status;

create table t4(
  id int not null primary key,
  name char(27)
) engine=ndb;
insert into t4 values (1, "Automatic");
select * from t4;

# Remove the table from NDB
system exec $NDB_DROP_TABLE --no-defaults -d test t4 >> $NDB_TOOLS_OUTPUT ; 

#
# Test that correct error is returned
--error ER_NO_SUCH_TABLE
select * from t4;
--error ER_NO_SUCH_TABLE
select * from t4;

show status like 'handler_discover%';
--error ER_BAD_TABLE_ERROR
drop table t4;

create table t4(
  id int not null primary key,
  name char(27)
) engine=ndb;
insert into t4 values (1, "Automatic");
select * from t4;

# Remove the table from NDB
system exec $NDB_DROP_TABLE --no-defaults -d test t4 >> $NDB_TOOLS_OUTPUT ; 

--error ER_NO_SUCH_TABLE
select * from t4;

drop table if exists t4;

# Test that dropping a table that does not exists
# on  disk or in NDB gives same result as above
--error ER_BAD_TABLE_ERROR
drop table t5;
drop table if exists t5;


