create table t1(id int)engine=innodb;
create table t2(id int)engine=innodb;

delimiter //;
CREATE TRIGGER tri_1
  before INSERT ON t2 FOR EACH ROW
BEGIN
  INSERT INTO t1 select nextval(s1);
END//
delimiter  ;//

begin;
insert into t2 values(1111);
insert into t2 values(1111);
insert into t2 values(1111);
insert into t2 values(1111);

select * from t2;
select * from t1;
rollback;
select * from t2;
select * from t1;

select nextval(s1);


drop trigger tri_1;
drop table t1;
drop table t2;
drop sequence s1;

