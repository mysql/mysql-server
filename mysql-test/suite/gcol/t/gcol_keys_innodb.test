SELECT
  CONCAT( t2.col_varchar_nokey , t2.col_varchar_nokey ) AS f2,
  t1.col_varchar_key AS f5
FROM
  t2 LEFT JOIN t1 ON t2.col_int_nokey > t1.col_int_nokey
ORDER BY f2, f5;
