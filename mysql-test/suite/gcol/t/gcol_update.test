                (concat(c2,_utf8mb4'x')) VIRTUAL);
CREATE TABLE t3(c1 JSON, c2 INT GENERATED ALWAYS AS ((c1 + 1)) VIRTUAL);

INSERT INTO t2(c1,c2) VALUES(1, '{"tr": "x"}'), (2, '{"tr": "x"}');
INSERT INTO t3(c1) VALUES(CAST(7 AS JSON));


