COMMENT="NDB_TABLE=PARTITION_BALANCE=FOR_RP_BY_LDM" engine=ndb;
ALTER TABLE t ALGORITHM=inplace,
COMMENT="NDB_TABLE=PARTITION_BALANCE=FOR_RP_BY_LDM";
