--echo Testing ndb_waiter
replace_regex /localhost:[0-9]+ .*/localhost:<MGMD-PORT><MAYBE-TLS>/;
--exec $NDB_WAITER --verbose=2
replace_regex /line.*/line=no_such_host/
              /no_such_host:1186 .*/no_such_host:1186<MAYBE-TLS>/;
