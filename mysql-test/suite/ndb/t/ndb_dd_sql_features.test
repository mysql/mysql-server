 SELECT * FROM test.t1 ORDER BY a1;

 START TRANSACTION;
 INSERT INTO test.t1 VALUES(NULL, "aaaaa2", "bbbbb2");
 ROLLBACK; 
 SELECT * FROM test.t1 ORDER BY a1;

 DELETE FROM test.t1;
