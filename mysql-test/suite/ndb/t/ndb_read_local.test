--source ndb_read_local.inc

--exec $NDB_MGM --verbose=0 -e'create nodegroup 3,4'
alter table t1 algorithm=inplace, reorganize partition;
alter table t2 algorithm=inplace, reorganize partition;

--source ndb_read_local.inc

