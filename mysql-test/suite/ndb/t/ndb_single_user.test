--error 1296
select * from t1 where a = 1;
--error 1296
select * from t1 where b = 4;
--error 1296
update t1 set b=102 where a = 2;
--error 1296
update t1 set b=103 where b = 3;
--error 1296
update t1 set b=b+100;
--error 1296
