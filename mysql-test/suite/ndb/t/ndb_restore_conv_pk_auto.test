--disable_query_log
set ndb_autoincrement_prefetch_sz = @old_ndb_autoincrement_prefetch_sz;
--enable_query_log

--source suite/ndb/include/backup_restore_cleanup.inc
--remove_file $NDB_TOOLS_OUTPUT
