  SELECT c,d FROM t2;

  UPDATE t2, t1 SET t2.d = DEFAULT WHERE c = 'foobar' and b = c;
  --sorted_result
  SELECT a,b FROM t1;
  --sorted_result
  SELECT c,d FROM t2;
}

