show create table foo;
begin;
insert into foo values (1,10,100),(2,20,200),(3,30,300);

connection conn1;
--error ER_LOCK_WAIT_TIMEOUT
insert into foo values (100,100,100);
--error ER_LOCK_WAIT_TIMEOUT
alter table foo drop index a;
