use test;
create table ticker (a int primary key) engine=ndb;
reset master;
use test;
create procedure tick(times int)
begin
set @x = 1;
repeat
insert into test.ticker values (@x);
select sleep(0.1);
set @x = @x + 1;
until @x > times
end repeat;
end %
