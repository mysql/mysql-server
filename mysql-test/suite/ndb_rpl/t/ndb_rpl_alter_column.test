ALTER TABLE t1 ALGORITHM=INPLACE, CHANGE b c INT;

--sync_slave_with_master
connection slave;
SELECT * FROM t1 ORDER BY a;

connection master;

INSERT INTO t1 VALUES (6,6),(7,7),(8,8);
SELECT * FROM t1 ORDER BY a;

--sync_slave_with_master
connection slave;
SELECT * FROM t1 ORDER BY a;

# cleanup
