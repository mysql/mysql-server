--eval UPDATE mysql.user SET password_last_changed = '$date_to_restore_root' WHERE user='root'
--disable_query_log ONCE
--eval UPDATE mysql.user SET password_last_changed = '$date_to_restore_sys' WHERE user='mysql.sys'
