  --let $assert_text= The values of column 'd' should have non-zero timetsamp.
  --let $assert_cond= [SELECT COUNT(*) AS Val FROM t9 WHERE d = "0000-00-00 00:00:00", Val, 1] = 0
  --source include/assert.inc
