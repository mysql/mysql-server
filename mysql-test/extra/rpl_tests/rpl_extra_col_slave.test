  --let $rpl_only_running_threads= 1
  --source include/rpl_reset.inc
  SET @previous_sql_mode = @@sql_mode;
  --disable_warnings
  SET sql_mode = (select concat('ALLOW_INVALID_DATES,',
    replace(replace(@@sql_mode,'NO_ZERO_DATE',''), 'NO_ZERO_IN_DATE','')));
