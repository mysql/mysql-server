--echo *** On Slave ***
sync_slave_with_master;
STOP SLAVE;

SET @saved_slave_type_conversions = @@slave_type_conversions;
SET GLOBAL SLAVE_TYPE_CONVERSIONS = 'ALL_NON_LOSSY';

