# Extended testsuite for mysql-trunk-stage
# Covers more tests than default.push to catch problems in stage before 
# code is pushed to main trees
#
# Run all default suites without specifying any replication mode. This will run
# rpl tests in all 3 modes row, stmt and mixed
# Run with --big-test option so that longer tests are also run
perl mysql-test-run.pl --force --timer  --big-test --testcase-timeout=90  --parallel=auto --experimental=collections/default.experimental --comment=normal-big  --vardir=var-normal-big  --report-features --skip-test-list=collections/disabled-daily.list --unit-tests-report

# Run all default suites with ps-protocol
# Suites are not run with --no-skip until Bug#24365372 ELIMINATE USAGE OF MTS RELATED INC FILES FROM RPL TESTS is fixed
perl mysql-test-run.pl --force --timer  --parallel=auto --experimental=collections/default.experimental --comment=ps --vardir=var-ps --ps-protocol


# Run with innodb page size 4k
perl mysql-test-run.pl --timer  --force --parallel=auto --comment=innodb_4k_size --vardir=var-innodb-4k --experimental=collections/default.experimental --suite=innodb --mysqld=--innodb-page-size=4k --no-skip


# Run default suites with innodb_undo_tablespace set to > 0
# Suites are not run with --no-skip until Bug#24365372 ELIMINATE USAGE OF MTS RELATED INC FILES FROM RPL TESTS is fixed
perl mysql-test-run.pl --timer --force --parallel=auto --comment=innodb_undo-2-debug  --vardir=var-innodb-tablespaces-2-debug --experimental=collections/default.experimental --mysqld=--innodb_undo_tablespaces=2 --bootstrap --innodb_undo_tablespaces=2
# Run innodb suites with innodb_undo_table_spaces >0  and different pagesizes
perl mysql-test-run.pl --timer  --force --parallel=auto --comment=innodb_undo_5_64k --vardir=var-innodb-undo-5-64k --experimental=collections/default.experimental --suite=innodb_undo,innodb_zip,innodb --mysqld=--innodb_undo_tablespaces=5 --mysqld=--innodb-page-size=64k --no-skip

# Additional modes for rpl. Multi-Threaded Slave
# Suites are not run with --no-skip until Bug#24365372 ELIMINATE USAGE OF MTS RELATED INC FILES FROM RPL TESTS is fixed
perl mysql-test-run.pl --timer  --force --parallel=auto --comment=rpl_binlog_n_mix_MTS --vardir=var-mts-rpl-binlog-n_mix --mysqld=--binlog-format=mixed --experimental=collections/default.experimental --mysqld=--slave-parallel-workers=4 --suite=rpl,rpl_gtid,rpl_nogtid --skip-test=rpl_incompatible_gtids_in_relay_log

# Run the suites that are not part of the default - funcs_2, stress, jp, nist
perl mysql-test-run.pl --force --timer --testcase-timeout=60   --parallel=auto --experimental=collections/default.experimental --comment=funcs2  --vardir=var-funcs2 --suite=funcs_2 --no-skip
perl mysql-test-run.pl --force --timer   --parallel=auto --experimental=collections/default.experimental --comment=stress --vardir=var-stress  --suite=stress --no-skip
perl mysql-test-run.pl --force --timer   --parallel=auto --experimental=collections/default.experimental --comment=jp --vardir=var-jp --suite=jp --no-skip
perl mysql-test-run.pl --force --timer   --parallel=auto --experimental=collections/default.experimental --comment=nist  --vardir=var-nist --suite=nist --no-skip


# Engine independent tests

perl mysql-test-run.pl --timer --force   --parallel=auto  --comment=eits-tests-myisam-engine --experimental=collections/default.experimental --vardir=var-stmt-eits-tests-myisam-engine --suite=engines/iuds,engines/funcs --max-test-fail=0 --retry-failure=0 --mysqld=--default-storage-engine=myisam --mysqld=--default-tmp-storage-engine=myisam --skip-test-list=collections/disabled-daily.list --no-skip
perl mysql-test-run.pl --timer --force  --parallel=auto --comment=eits-tests-innodb-engine --experimental=collections/default.experimental --vardir=var-stmt-eits-tests-innodb-engine --suite=engines/iuds,engines/funcs  --max-test-fail=0 --retry-failure=0 --mysqld=--default-storage-engine=innodb --skip-test-list=collections/disabled-daily.list --no-skip
# Memcached tests
perl mysql-test-run.pl --timer --force  --comment=memcached --vardir=var-memcached --experimental=collections/default.experimental --parallel=1 --retry=0 --suite=memcached --skip-test-list=collections/disabled-daily.list
# Test of plugin services
perl mysql-test-run.pl --timer --force --parallel=auto --comment=test_services --vardir=var-test_services  --suite=test_services --skip-test-list=collections/disabled-per-push.list --no-skip
# test x plugin
perl mysql-test-run.pl --debug-server --timer --force --parallel=auto --comment=x --vardir=var-x --suite=x --experimental=collections/default.experimental
