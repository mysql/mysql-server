EXPLAIN
SELECT t1.col_time_key, t1.col_varchar_key
  FROM t2 STRAIGHT_JOIN t1 ON t1.col_int_key = t2.col_int_key
GROUP BY 1,2;
SELECT t1.col_time_key, t1.col_varchar_key
  FROM t2 STRAIGHT_JOIN t1 ON t1.col_int_key = t2.col_int_key
GROUP BY 1,2;

set session optimizer_switch=default;
set session join_cache_level=default;

