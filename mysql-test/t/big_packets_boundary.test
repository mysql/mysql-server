
# Test sending and receiving queries that saddle a MAX_PACKET_LENGTH
# boundary (aka 16mb boundary)

let $str = `SELECT REPEAT('X', 16777208)`;
let $i = 0;

--disable_query_log
while ($i < 16)
{
  let $str = z$str;
  --eval SELECT MD5("$str");
  --eval SELECT LENGTH("$str");
  --replace_column 1 verylongstring
  --eval SELECT "Q $str END";
  inc $i;
}
--enable_query_log
