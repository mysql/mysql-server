--echo # Test of table where the engine returns the DATA DIR.
--replace_result $MYSQL_TMP_DIR MYSQL_TMP_DIR
eval CREATE TABLE t1
(a int not null,
 primary key (a))
ENGINE=InnoDB
PARTITION BY KEY (a)
(PARTITION p0 DATA DIRECTORY '$MYSQL_TMP_DIR/alternate_dir/data_part',
 PARTITION p1);
--replace_result $MYSQL_TMP_DIR MYSQL_TMP_DIR
