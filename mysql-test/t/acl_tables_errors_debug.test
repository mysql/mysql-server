--error ER_LOCK_WAIT_TIMEOUT
GRANT EXECUTE ON PROCEDURE test.p1 TO 'foo'@'localhost';
SET DEBUG='-d, se_error_replace_routine_table_add';
GRANT EXECUTE ON PROCEDURE test.p1 TO 'foo'@'localhost';

SET DEBUG='+d, se_error_replace_routine_table_update';
--error ER_LOCK_WAIT_TIMEOUT
