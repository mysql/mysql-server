################################################################################
# Validate that when read_only mode is set after start
# Group Replication, its value is preserved when the member
# leaves the group.
#
# Test:
# 0. The test requires one server.
# 1. Bootstrap start a group on server. Set read_only=1. Validate
#    super_read_only=0 and read_only=1.
# 2. Stop GR. Validate that read_only mode is still enabled.
# 3. Clean up.
################################################################################
--source ../inc/have_group_replication_plugin.inc
--let $rpl_skip_group_replication_start= 1
--source ../inc/group_replication.inc


--echo
--echo ############################################################
--echo # 1. Start a group and set read_only mode.
--source ../inc/start_and_bootstrap_group_replication.inc

SET @saved_super_read_only= @@GLOBAL.super_read_only;
SET @saved_read_only= @@GLOBAL.read_only;
SET GLOBAL read_only = 1;

--let $assert_text= The super_read_only mode must be 0
--let $assert_cond= "[SELECT @@GLOBAL.super_read_only]" = 0;
--source include/assert.inc
--let $assert_text= The read_only mode must be 1
--let $assert_cond= "[SELECT @@GLOBAL.read_only]" = 1;
--source include/assert.inc


--echo
--echo ############################################################
--echo # 2. Leave the group and validate that read_only mode
--echo #    is still enabled.
--source include/stop_group_replication.inc

--let $assert_text= The super_read_only mode must be 0
--let $assert_cond= "[SELECT @@GLOBAL.super_read_only]" = 0;
--source include/assert.inc
--let $assert_text= The read_only mode must be 1
--let $assert_cond= "[SELECT @@GLOBAL.read_only]" = 1;
--source include/assert.inc

CREATE USER 'testuser'@'localhost';
--connect(server1_testuser,localhost,testuser,,)
--let $rpl_connection_name= server1_testuser
--source include/rpl_connection.inc
--error ER_OPTION_PREVENTS_STATEMENT
CREATE TABLE t1 (c1 INT NOT NULL PRIMARY KEY) ENGINE=InnoDB;


--echo
--echo ############################################################
--echo # 3. Clean up.
--let $rpl_connection_name= server1
--source include/rpl_connection.inc
SET GLOBAL super_read_only= @saved_super_read_only;
SET GLOBAL read_only= @saved_read_only;
--disconnect server1_testuser
DROP USER 'testuser'@'localhost';
--source ../inc/group_replication_end.inc
