SET @@GLOBAL.group_replication_recovery_ssl_key= @saved_gr_recovery_ssl_key;
SET @@GLOBAL.group_replication_recovery_ssl_verify_server_cert= @saved_gr_recovery_ssl_verify_server_cert;
