  scope: GLOBAL
  payload: "Mysqlx.Notice.Warning { level: ERROR\ncode: 1810\nmsg: \"IO Read error: read_timeout exceeded\"\n }"
}

Server disconnected
ok
SET GLOBAL mysqlx_read_timeout = 30;
UNINSTALL PLUGIN mysqlx;
DROP USER temp_user@localhost;
