SET GLOBAL mysqlx_connect_timeout='gduges7';

--exec $MYSQLXTEST -u mysqlxsys --password='auth_string' --file=$MYSQL_TMP_DIR/mysqlx-user-connection.tmp
show variables like 'mysqlx_connect_timeout';
