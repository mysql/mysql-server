path=`dirname $0`
. "$path/SETUP.sh"
extra_flags="$amd64_cflags -D__sun -m64 -mtune=athlon64 $debug_cflags"
extra_configs="$amd64_configs $debug_configs $max_configs --with-libevent"

LDFLAGS="-m64 -lmtmalloc -R/usr/sfw/lib/64"
export LDFLAGS

. "$path/FINISH.sh"
