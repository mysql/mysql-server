path=`dirname $0`
cmake $path/.. -DWITH_DEBUG=1 -DWITH_VALGRIND=1 \
    -DCMAKE_C_FLAGS=-DHAVE_purify -DCMAKE_CXX_FLAGS=-DHAVE_purify \
    -DWITH_NDBCLUSTER=0
make
